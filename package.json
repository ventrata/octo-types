{
	"name": "@ventrata/octo-types",
	"version": "0.0.1",
	"private": false,
	"license": "ISC",
	"files": [
		"dist/index.d.ts",
		"dist/models/**/*.d.ts",
		"dist/schemas/**/*.d.ts"
	],
	"types": "dist/index.d.ts",
	"repository": {
		"url": "https://github.com/ventrata/octo-types"
	},
	"main": "dist/index.js",
	"scripts": {
		"get:openapi:yaml": "ts-node src/utils/get-openapi-yaml.ts",
		"generate:models": "openapi --input src/openapi.yaml --output src/ --exportCore false --exportServices false --client none --indent 2",
		"generate:schemas": "ts-node src/utils/generate-schemas.ts",
		"clean": "rm -rf dist",
		"generate": "npm run get:openapi:yaml && npm run generate:models && npm run generate:schemas",
		"build": "npx tsc",
		"build:dry": "tsc --noEmit",
		"build:dry:ci": "tsc --noEmit",
		"check": "npm run build:dry && npm run format && npm run lint",
		"fix": "biome check --write .",
		"format": "biome format",
		"format:fix": "biome format --write .",
		"lint": "biome lint",
		"lint:fix": "biome lint --write .",
		"audit": "npm audit",
		"prepare": "npm run build",
		"test": ""
	},
	"peerDependencies": {
		"zod": "^3.25.0"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/node": "^22.9.0",
		"glob": "^11.0.3",
		"openapi-typescript-codegen": "^0.29.0",
		"ts-node": "^10.9.2",
		"ts-to-zod": "^3.15.0",
		"typescript": "^5.7.2",
		"zod": "^3.25.0"
	},
	"dependencies": {
		"@biomejs/biome": "2.2.0"
	}
}
